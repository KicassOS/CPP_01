COMPILATION = c++ -Wall -Wextra -Werror -std=c++98

SRC = main.cpp utils.cpp

OBJ = $(SRC:.cpp=.o)

HEADER = SedIsForLosers.hpp

NAME = ./SedIsForLosers

all: $(NAME)

$(NAME): $(OBJ) $(HEADER)
	$(COMPILATION) $(OBJ) -o $(NAME)

%.o: %.cpp $(HEADER)
	$(COMPILATION) $< -c -o $@

clean:
	rm -f *.o

fclean: clean
	rm -f $(NAME)

test:
	cd tests/ && ./test.sh

re: fclean all